.shopsList-container {
  color: #999;
  background-color: #f3f3f3;
}
.shopsList-wrapper {
  background-color: #fff;
}
.shops-list {
  margin: 0 30rpx;
}
.shops-list .shops-item {
  position: relative;
  padding: 30rpx 0;
}
.shops-list .shops-item::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  width: 100%;
  background-color: #EEF0F7;
  transform: skewY(.5);
  box-sizing: border-box;
}
.shops-item .item-name-distance {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}
.shops-item .item-name {
  max-width: 520rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  color: #333;
}
.shops-item .item-distance {
  font-size: 22rpx;
}
.shops-item .item-address {
  font-size: 26rpx;
  color: #999;
}
.shopsList-num {
  padding: 30rpx 0;
  font-size: 26rpx;
  text-align: center;
}
.shops-list-null{
  height: 254rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f3f3f3;
}
.shops-list-null image{
  max-width: 200rpx;
  max-height: 200rpx;
}
.shops-list-null text {
  padding-top: 20rpx;
  font-size: 26rpx;
  color: #c5c5c5;
}