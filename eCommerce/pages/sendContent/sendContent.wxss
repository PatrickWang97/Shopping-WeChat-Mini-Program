page {
    background: #fcfcfc;
    box-sizing: border-box;
    font-size: 28rpx;
}
.giftCardImg {
    width: 650rpx;
    height: 370rpx;
    margin: 45rpx 0 33rpx 50rpx;
    border-radius: 20rpx;
    overflow: hidden;
    box-shadow: 0rpx 3rpx 5rpx 5rpx #F0F1F4;
}
.giftCardImg image {
    width: 100%;
    height: 100%;
}
.giftCardTitle {
    color: #333;
    font-size: 34rpx;
    font-weight: bold;
    line-height: 34rpx;
    margin-left: 50rpx;
    vertical-align: middle;
}
.caption {
    margin-top: 71rpx;
    margin-left: 50rpx;
    line-height: 28rpx;
}
.caption view {
    display: inline-block;
    color: #333;
    vertical-align: middle;
}
.ico-moon.title {
    color: #666;
    width: 31rpx;
    margin: 0 13rpx 0 0;
}
.textarea {
    box-sizing: border-box;
    width: 652rpx;
    height: 300rpx;
    margin: 40rpx 0 0 50rpx;
    background-color: #fff;
    box-shadow: 0rpx 3rpx 5rpx 5rpx #F0F1F4;
    border-radius: 12rpx;
    padding: 28rpx;
}
textarea {
    width: 100%;
    height: 100%;
}
.remark {
    font-size: 24rpx;
    color: #999;
    margin: 29rpx 0 0 50rpx;
}
.presenter {
    line-height: 94rpx;
    background: linear-gradient(to right, #ff9600, #ff7200);
    border-top: 1rpx solid #f3f3f3;
    color: #fff;
    font-size: 30rpx;
    text-align: center;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
}