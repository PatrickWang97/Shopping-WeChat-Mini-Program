page {
  background: #f3f3f3;
}
.main {
  padding: 30rpx 25rpx 0;
}
.img {
  width: 100%;
}
.invoice-img {
  width: 100%;
}
.button-box {
  position: relative;
  margin-top: 50rpx;
  width: 100%;
}
.btn-absolute {
  position: absolute;
  top: 0;
  left: 50%;
  font-family: "微软雅黑";
  transform: translateX(-50%);
}
.save-local {
  width: 600rpx;
  height: 94rpx;
  background: rgba(255,113,0,1);
  border-radius: 47rpx;
  color: #fff;
  line-height: 94rpx;
  text-align: center;
}
.send-email {
  width: 600rpx;
  height: 94rpx;
  background: #fff;
  margin-top: 35rpx;
  border-radius: 47rpx;
  color: rgba(51,51,51,1);
  line-height: 94rpx;
  text-align: center;
}
.mark {
  position: absolute;
  width: 100vw;
  height: 100vh;
  background:rgba(0,0,0,0.5);
  z-index: 999;
}
.dialog {
  position: absolute;
  width: 560rpx;
  top: 200rpx;
  left: 50%;
  background: #fff;
  border-radius: 10rpx;
  transform: translateX(-50%);
}
.title {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  text-align: center;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.content {
  width: 100%;
  height: 140rpx;
  padding: 0 40rpx 60rpx 40rpx;
}
.email-text {
  width: 410rpx;
  height: 90rpx;
  background:rgba(245,245,245,1);
  padding: 25rpx 35rpx;
  font-size: 28rpx;
}
.bottom {
  width: 100%;
  border-top: 1rpx solid rgba(235, 235, 235, 1);
}
.bottom-btn {
  display: flex;
  border-bottom-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}
.cancel {
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  width: 50%;
  border-right: 1rpx solid rgba(235, 235, 235, 1);
  color: rgba(102,102,102,1);
}
.ok {
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  width: 50%;
  color: rgba(255,113,0,1);
}