.page-wrap {
  background: #f3f3f3;
  min-height: 100vh;
}
.page-mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .4);
  position: fixed;
  z-index: 9;
}
.page-head {
  padding: 20rpx 0;
  background: #fff;
}
.page-head.fix {
  padding-bottom: 0;
}
.input-wrap {
  position: relative;
}
.page-input {
  height: 64rpx;
  background: #f5f5f5;
  border-radius: 32rpx;
  padding-left: 80rpx;
}
.input-search-icon {
  position: absolute;
  left: 40rpx;
  bottom: 18rpx;
  font-size: 28rpx;
  color: #b3b3b3;
}
.input-placeholder-style {
  font-size: 28rpx;
  color: #ccc;
}
.bread {
  height: 60rpx;
  background: #f5f5f5;
  width:230rpx;
  text-align: center;
  border-radius: 30rpx;
  margin: 20rpx auto;
  position: relative;
  padding: 0 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.bread-arrow {
  position: absolute;
  right: 30rpx;
  font-size: 20rpx;
  color: #666;
  font-weight: bold;
  top: 22rpx;
}
.bread-title {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
}
.record-detail {
  background-color: #fff;
  padding: 54rpx 30rpx 40rpx 24rpx;
  margin: 22rpx 24rpx 0;
  border-radius: 12rpx;
  position: relative;
}
.record-detail-timestamp {
  font-size: 22rpx;
  color: #999;
}
.record-detail-top {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 6rpx;
}
.record-detail-title {
  font-size: 26rpx;
  color: #333;
  width: 430rpx;
  display: -webkit-box; 
  -webkit-line-clamp:2; 
  -webkit-box-orient:vertical;
  text-overflow: ellipsis;
  overflow:hidden;
}
.record-detail-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  width: 250rpx;
  text-align: right;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.record-badge {
  color: #333;
  font-size: 22rpx;
  background:linear-gradient(-3deg,rgba(251,252,78,1),rgba(253,206,31,1));
  border-radius:15rpx 15rpx 15rpx 4rpx;
  padding: 6rpx 14rpx;
  position: absolute;
  right: -6rpx;
  top: -6rpx;
}
.bread-crumbs {
  padding: 30rpx 30rpx 8rpx;
  border-top: 1rpx solid #f3f3f3;
}
.crumbs-item {
  width: 214rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #f5f5f5;
  text-align: center;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #333;
  display: inline-block;
  margin-right: 24rpx;
  margin-bottom: 22rpx;
}
.crumbs-item:nth-child(3n){
  margin-right: 0;
}
.crumbs-item.active {
  background: #FFF1E5;
  color: #FF7100;
}
.fix {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9;
  width: 100%;
}
.user-list-none {
  text-align: center;
  padding-top: 130rpx;
}
.user-list-none image {
  width: 266rpx;
  height: 196rpx;
}
.user-list-none-tip {
  margin-top: 40rpx;
  color: #666666;
  font-size: 26rpx;
}