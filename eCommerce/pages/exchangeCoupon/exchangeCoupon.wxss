.ticket-list {
  margin-top: 23rpx;
}
.ticket {
  position: relative;
  width: 704rpx;
  margin: 0 auto 30rpx;
}
.ticket::before {
  content: '';
  position: absolute;
  bottom: 45rpx;
  left: -9rpx;
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background-color: #f6f6f6;
  z-index: 10;
}
.ticket::after {
  content: '';
  position: absolute;
  bottom: 45rpx;
  right: -9rpx;
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background-color: #f6f6f6;
  z-index: 10;
}
.ticket .top-section {
  width: 704rpx;
  height: 175rpx;
  margin: 0 auto;
  position: relative;
  overflow: hidden;
  background: #fff;
  border-top: 10rpx solid #FF7100;
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;
  box-shadow: 0px -5px 5px -5px rgba(0, 0, 0, 0.2), 
              5px 0px 5px -5px rgba(0, 0 , 0, 0.2),
              -5px 0px 5px -5px rgba(0, 0 , 0, 0.2);
}
.ticket .detail-info {
  position: absolute;
  top: 45rpx;
  left: 38rpx;
  width: calc( 100% - 210rpx);
}
.ticket .detail-info .name {
  display:flex;
  align-items:center;
  max-width: 250px;
  color: #333;
  font-size: 35rpx;
  line-height: 35rpx;
  margin-bottom: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.ticket .detail-info .use-condition {
  color: #666;
  font-size: 26rpx;
  line-height: 30rpx;
  height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.ticket .background-word-area {
  position: absolute;
  right: -64rpx;
  top: -80rpx;
  padding: 10rpx;
  border: 1px solid #FF7100;
  border-radius: 50%;
  color: #fff;
  opacity: 0.1;
}
.ticket .background-circle {
  width: 185rpx;
  height: 185rpx;
  line-height: 185rpx;
  background-color:#FF7100;
  border-radius:50%;
}
.ticket .background-word {
  position:absolute;
  bottom: 50rpx;
  left: 50rpx;
  font-size: 66rpx;
  line-height: 66rpx;
}
.ticket .receive-btn {
  position: absolute;
  top: 88rpx;
  right: 36rpx;
  font-size: 26rpx;
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: #FF7100;
  border-radius: 16rpx;
  color:#fff;
}
.ticket .top-section .right {
  float: left;
}
.ticket .bottom-section {
  position: relative;
  width: 704rpx;
  margin: 0 auto;
  height: 54rpx;
  line-height: 54rpx;
  text-indent: 1em;
  background: #fff;
  font-size: 18rpx;
  color: #999;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
}
.ticket .bottom-section view{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.ticket .bottom-section::before {
  content: '';
  position: absolute;
  top: 0rpx;
  left: 9rpx;
  width: calc(100% - 20rpx);
  border-top: 1px dashed #f3f3f3;
}
.ticket .bottom-section::after {
  content: '';
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 22px;
  border-bottom-left-radius: 4px;
  border-bottom-right-radius: 4px;
  box-shadow: 0px 0px 5px 0px rgba(0, 0 , 0, 0.2);
  z-index: -1;
}
.ticket.has-receive .top-section {
  border-color: #ccc!important;
}
.ticket.has-receive .background-word-area {
  border-color: #ccc!important;
}
.ticket.has-receive .background-circle {
  background-color: #ccc!important;
}
.ticket.has-receive .receive-btn {
  background-color: #ccc!important;
}
.franchisee-ticket.ticket::before,
.franchisee-ticket.ticket::after{
  bottom: 55rpx;
}
.franchisee-ticket .top-section{
  border-color: #FF7100;
}
.franchisee-ticket .bottom-section{
  height: 65rpx;
  line-height: 65rpx;
  font-size: 22rpx;
}
.coupon-franchisee{
  margin-top: 10rpx;
  padding: 0 30rpx;
}
.coupon-franchisee-logo{
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  margin-top: 6rpx;
  border-radius: 50%;
  vertical-align: top;
}
.coupon-franchisee-name{
  display: inline-block;
  font-size: 28rpx;
  color: #333;
  margin-left: 13rpx;
  vertical-align: top;
}
.coupon-franchisee-name label{
  font-size: 22rpx;
  color: #666;
  margin-left: 6rpx;
}
.coupon-franchisee-distance{
  float: right;
  font-size: 24rpx;
  color: #666;
  line-height: 40rpx;
}
.detail-info-franchisee{
  display: inline-block;
  width: calc( 100% - 220rpx);
  margin-left: 30rpx;
  margin-top: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.coupon-value{
  display: inline-block;
  font-size: 50rpx;
  color: #FF7100;
}
.coupon-value label{
  font-size: 28rpx;
}
.coupon-condition{
  display: inline-block;
  font-size: 24rpx;
  color: #666;
  margin-left: 10rpx;
}
.franchisee-ticket .receive-btn{
  right: 30rpx;
  padding: 0;
  margin: 0;
  width: 150rpx;
  height: 54rpx;
  line-height: 54rpx;
  border-radius: 4rpx;
  background-color: #FF7100;
}
.coupon-no-more {
  padding:20rpx 0 40rpx;
  color:#ccc;
  text-align:center;
  font-size:28rpx;
}
.coupon-league-mark {
  display: inline-block;
  position: relative;
  width: 64rpx;
  height: 35rpx;
  margin-right: 12rpx;
  line-height: 35rpx;
  text-align: center;
  font-size: 24rpx;
}
.coupon-league-mark view{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0.1;
}
