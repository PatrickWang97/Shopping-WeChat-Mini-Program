page {
  background: #f3f3f3;
}
.goods-customer-contain {
  margin-top: 10rpx;
}
.goods-customer-header {
  padding: 0 30rpx;
  background: #fff;
  font-size: 26rpx;
  padding-bottom: 20rpx;
}
.goods-customer-header > view {
  border-bottom: 1rpx solid #f3f3f3;
  line-height: 60rpx;
}
.customer-add-time {
  color: #999999;
}
.goods-customer-content {
  background: #FAFAFA;
  padding: 20rpx 30rpx;
}
.goods-customer-bottom {
  background: #fff;
}
.goods-customer-content image {
  width: 140rpx;
  height: 140rpx;
  display: inline-block;
  vertical-align: top;
}
.goods-detail-box {
  display: inline-block;
  width: 508rpx;
  margin-left: 40rpx;
  vertical-align: top;
  height: 140rpx;
}
.goods-title {
  color: #333;
  font-size: 26rpx;
  overflow: hidden; 
  text-overflow: ellipsis;
  display: -webkit-box; 
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; 
  margin-bottom: 6rpx;
  word-break: break-all;
}
.goods-model {
  color: #999;
  font-size: 22rpx;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.goods-price-box {
  color: #333;
  font-size: 28rpx;
}
.goods-num {
  font-size: 22rpx;
}
.order-status-explain {
  color: #F2303E;
  font-size: 26rpx;
  display: inline-block;
}
.order-status-explain > text {
  display: inline-block;
  vertical-align: middle;
}
.order-status-explain .icon-refunds {
  font-size: 30rpx;
  margin-right: 8rpx;
}
.order-refund-price {
  color: #F2303E;
  font-size: 26rpx;
  margin-top: 4rpx;
}
.order-refund-box {
  padding: 0 30rpx;
  line-height: 74rpx;
  border-bottom: 1rpx solid #f3f3f3;
}
.customer-btn-box {
  line-height: 76rpx;
  text-align: right;
  padding: 0 10rpx;
  height: 80rpx;
}
.customer-btn {
  padding: 0 28rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #666;
  border-radius: 25rpx;
  border: 1rpx solid #D2D2D2;
  display: inline-block;
  margin-right: 20rpx;
}
.waiting-color {
  color: #ff7100;
}
.package-info-icon {
  margin-left: 12rpx;
  opacity: .5;
  vertical-align: middle;
}
.package-info-content {
  padding: 18rpx 28rpx;
  background-color: #f9f9f9;
  border-radius: 4rpx;
  color: #333;
  box-sizing: border-box;
}
.package-info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}
.package-info-item:last-child {
  margin-bottom: 6rpx;
}
.package-info-l {
  text-align: left;
  width: 100%;
}
.package-info-attr {
  padding-top: 8rpx;
  font-size: 22rpx;
  color: #999;
}
.package-info-name {
  overflow: hidden;
  max-width: 400rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: inline-block;
  vertical-align: text-top;
  font-size: 28rpx;
}
.package-info-require {
  color:#f2303e;
  background-color:rgba(248, 229, 230);
  border-radius: 2rpx;
  padding: 4rpx;
  margin-right: 10rpx;
  font-size: 20rpx;
}
.package-info-model {
  margin-top: 4rpx;
  color: #999;
  font-size: 22rpx;
  text-align: left;
}
.attributes-add_price {
  color:#f2303e;
}
.package-info-add_price {
  color:#f2303e;
  font-size: 24rpx;
  margin-right: 40rpx;
}
.package-info-model_add_price {
  color:#f2303e;
}
.package-info-num {
  font-size: 24rpx;
}
.goods-attributes-wrap {
  font-size: 22rpx;
  color: #666;
  padding-top: 20rpx;
}
.package-info-title {
  padding: 10rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods-attributes-item {
  padding: 10rpx 0;
  background: #F9F9F9;
}
.package-info-wrap {
  overflow: hidden;
  margin-top: 20rpx;
  text-align: center;
}
.goods-more.package-info {
  margin: 0;
  font-size: 24rpx;
}
.package-info-icon {
  margin-left: 12rpx;
  opacity: .5;
  vertical-align: middle;
}
.package-info-content {
  padding: 18rpx 28rpx;
  background-color: #f9f9f9;
  border-radius: 4rpx;
  color: #333;
  box-sizing: border-box;
}