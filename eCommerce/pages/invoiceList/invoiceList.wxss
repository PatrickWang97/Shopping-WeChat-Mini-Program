page {
  background:rgba(243,243,243,1);
  margin-top: 15rpx;
}
.invoice-main {
  margin: 20rpx 24rpx 0;
}
.invoice-item {
  background: #fff;
  margin-bottom: 16rpx;
  padding: 0 30rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}
.item-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  border-bottom: 1rpx solid rgba(243,243,243,1);
}
.item-time {
  color:rgba(102,102,102,1);
}
.price {
  color: #FF7100;
  font-weight: bold;
}
.item-content {
  padding-top: 30rpx;
  border-bottom: 1rpx solid rgba(243,243,243,1);
}
.item-content > text {
  display: block;
  margin-bottom: 30rpx;
  line-height: 28rpx;
}
.item-footer {
  display: flex;
  justify-content: flex-end;
  padding: 15rpx 0;
}
.invoice-details {
  display: flex;
  justify-content: flex-end;
}
.item-btn {
  height: 54rpx;
  line-height: 54rpx;
  padding: 0 18rpx;
  border: 1rpx solid rgba(255,113,0,1);
  border-radius: 28rpx;
  color: rgba(255,113,0,1);
}
.save {
  border: 1rpx solid rgba(210,210,210,1);
  color: rgba(102,102,102,1);
  margin-right: 22rpx;
}
.restart {
  border: 1rpx solid rgba(210,210,210,1);
  color: rgba(102,102,102,1);
}
.noMoreNewDataTip {
  text-align: center;
  color: #aaa;
  line-height: 30px;
  margin-bottom: 10px;
}
.invoice-text {
  display: inline-block;
  height: 54rpx;
  line-height: 54rpx;
  color: #666666;
}
