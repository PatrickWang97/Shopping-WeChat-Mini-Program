page {
  background-color: #f3f3f3;
  font-size: 24rpx;
}
.transfer-wrap {
}
.transfer-wrap .top-block{
  width: 100%;
  height: 180rpx;
  position: relative;
  background: -webkit-linear-gradient(left, #FFAE00, #FF7100);
  background: linear-gradient(left, #FFAE00, #FF7100);
  position: relative;
}
.top-block .icon-img{
  width: 32rpx;
  height: 32rpx;
  color: #fff;
  position: absolute;
  top: 70rpx;
  left: 32rpx;
}
.top-block .text{
  font-size: 34rpx;
  color: #fff;
  position: absolute;
  line-height: 1;
  top: 70rpx;
  left: 82rpx;
}
.transfer-wrap .top-block .bg-img{
  position: absolute;
  bottom: 0;
  width: 750rpx;
  height: 180rpx;
  display: inline-block;
}
.total-payment{
  padding: 0rpx 30rpx;
  background-color: #fff;
}
.total-payment .content{
  display: flex;
  justify-content: space-between;
  padding: 36rpx 0;
  border-bottom: 1rpx solid #f3f3f3;
}
.total-payment .text{
  font-size: 28rpx;
  color: #333;
}
.total-payment .price{
  font-size: 32rpx;
  color: #FF7100;
}
.transfer-detail{
  padding: 24rpx 30rpx;
  background-color: #fff;
  margin-bottom: 16rpx;
}
.transfer-detail .detail-item{
  display: flex;
  justify-content: space-between;
  margin-bottom: 26rpx;
}
.transfer-detail .detail-item:last-child{
  margin-bottom: 0;
}
.transfer-detail .detail-item .detail-text{
  color: #666;
}
.transfer-detail .detail-item .detail-content{
  color: #999;
}
.remarks{
  padding: 29rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
}
.remarks .text, .remarks .content{
  font-size: 26rpx;
  color: #333;
}
.remarks .text{
  flex: 0 0 210rpx;
}
.remarks .content{
  max-width: 480rpx;
  word-wrap: break-word;
}
.transfer-bottom-operation {
  padding: 40rpx 30rpx;
  text-align: right;
}
.transfer-bottom-operation .btn {
  display: block;
  padding: 20rpx;
  border: none;
  font-size: 30rpx;
}
.transfer-bottom-operation .carry-btn {
  margin-bottom: 30rpx;
  background-color: #FF7100;
  color: #fff;
}
.transfer-bottom-operation .cancel-btn {
  color: #666;
}
.colord2d2 {
  color: #D2D2D2;
}
.color999 {
  color: #999;
}
.invoice-text {
  display: inline-block;
  height: 54rpx;
  line-height: 54rpx;
  color: #666666;
}
.item-btn {
  display: inline-block;
  height: 54rpx;
  background: rgba(255,113,0,0.1);
  line-height: 54rpx;
  padding: 0 21rpx;
  border-radius: 27rpx;
  color: rgba(255,113,0,1);
}
.save {
  background: rgba(242,242,242,1);
  padding: 0 27rpx;
  color: rgba(102,102,102,1);
  margin-right: 20rpx;
}
.colorf23 {
  color: #F2303E;
}