page {
  font-size: 30rpx;
  background-color: #f4f4f4;
}
.container{
  position: relative;
  width: 100%;
  height: 100vh;
}
.page-bg{
  z-index: -1;
  margin: auto;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 500rpx;
  background: linear-gradient(to bottom, #ff7100, #FF7C00,#FE7A0F, #f4f4f4);
}
.page-bg-circle{
  margin: auto;
  position: absolute;
  top: -40%;
  bottom: 50%;
  width: 100%;
  height: 100%;
  left: 0;
  right: 0;
  background:linear-gradient(25deg, #ff9e43,#FF7C00, #ff7100, #ff7100);
  border-radius: 100%;
}
.top-section {
  padding-top: 90rpx;
  text-align: center;
  color: #FFFEFD;
}
.customer-num {
  margin-top: 36rpx;
  font-size: 100rpx;
  color: #ffffff;
}
.bottom-section {
  width:586rpx;
  margin:0 auto;
  margin-top: 44rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 10px;
}
.bottom-section .user-info{
  text-align: left;
  position: relative;
  padding: 20rpx;
}
.user-info .user-cover{
  float: left;
  margin: 10rpx 20rpx 10rpx 10rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
}
.user-info .user-name{
  margin: 10rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #000;
}
.user-info .share-text{
  margin: 10rpx;
  font-size: 24rpx;
  color: #999;
}
.user-info .comma {
  font-family: Arial, Helvetica, sans-serif;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  font-size: 100rpx;
  color: #FFE3CC;
}
.bottom-section .code-image {
  margin: 50rpx 0;
  width: 380rpx;
  height: 380rpx;
}
.bottom-title {
  line-height: 100rpx;
  background: #ff7100;
  color: #fff;
  font-size: 30rpx;
}
.my-promotion-tips {
  width:500rpx;
  line-height: 110rpx;
  margin: 0 auto;
  font-size: 26rpx;
  color: #FF7100;
}
.bottom-button {
  position: absolute;
  margin: auto;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 40px;
  line-height: 40px;
  font-size: 15px;
  text-align: center;
  color: #fff;
  background-color: #ff7100;
}
#shareCanvas {
  width: 586rpx;
  height: 720rpx;
  position: absolute;
  left: -200%;
  top: 0;
}