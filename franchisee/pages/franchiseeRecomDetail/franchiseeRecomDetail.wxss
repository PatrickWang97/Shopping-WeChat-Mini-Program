page{
  height: 100%;
  background: #fff;
}
.foods-recom {
  padding: 30rpx 0;
  background: #fff;
}
.recommend-foods-sec {
  font-size: 32rpx;
  font-weight: bold;
  color: #303030;
  margin-bottom: 22rpx;
}
.recommend-foods-sec {
  padding: 0 30rpx;
}
.recommend-foods-sec label {
  color: #666;
  font-size: 28rpx;
  padding-left: 10rpx;
}
.recommend-content-list {
  width: 100%;
  white-space: nowrap;
}
.recommend-item {
  width: 206rpx;
  display: inline-block;
  margin-right: 20rpx;
}
.recommend-item:first-child {
  padding-left: 30rpx;
}
.recommend-item-pic {
  position: relative;
  border-radius: 10rpx;
  width: 206rpx;
  height: 150rpx;
  overflow: hidden;
  padding: 4rpx;
}
.selected {
  border: 2rpx solid #FF3B49;
}
.selected .recommend-item-name {
  color: #FF3B49;
}
.recommend-item-img {
  display: block;
  border-radius: 6rpx;
  width: 100%;
  height: 100%;
}
.recommend-item-lab {
  position: absolute;
  top: 0;
  left: 0;
  width: 56rpx;
  height: 28rpx;
  border-radius: 6rpx 2rpx 6rpx 2rpx;
}
.recommend-item-name {
  font-size: 26rpx;
  color: #333;  
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-top: 22rpx;
}
.foods-content {
  display: flex;
  padding-top: 40rpx;
  justify-content: space-between;
}
.foods-top-left {
  display: flex;
  padding-left: 25rpx;
}
.foods-left-num {
  width:60rpx;
  height:36rpx;
  color: #fff;
  text-align: center;
  line-height: 36rpx;
  background:linear-gradient(-90deg,rgba(246,33,48,1) 0%,rgba(255,106,99,1) 100%);
  border-radius:4rpx;
}
.foods-left-title {
  padding-left: 10rpx;
  width: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.foods-left-title_wrap {
  display: flex;
  align-items: flex-start;
}
.foods-left-name {
  font-size: 36rpx;
  font-weight: 800;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1;
  min-height: 44rpx;
  letter-spacing: 2rpx;
}
.foods-left-label {
  display: inline-block;
  width: 64rpx;
  height: 34rpx;
  margin-left: 10rpx;
  border-radius: 4rpx;
}
.foods-left-price {
  font-size: 32rpx;
  color: #666;
  font-weight: bold;
}
.foods-top-right {
  display: flex;
  width: 110rpx;
  height: 90rpx;
  border-radius:4rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-right: 30rpx;
  border: 1rpx solid #D3D3D3;
}
.foods-right-count {
  text-align: center;
  font-size: 36rpx;
  font-weight: 500;
  color: #666;
  line-height: 1;
}
.foods-right-icon {
  font-size: 24rpx;
  color: #999;
  font-weight: bold;
}
.active {
  border: 1rpx solid #FF3B49;
}
.active .foods-right-count, .active .foods-right-icon {
  color: #FF3B49!important;
}
.foods-detail {
  padding: 25rpx;
  overflow: hidden;
}
.limitHeight {
  max-height: 438rpx;
}
.foods-detail-btn {
  text-align: center;
  color: #FF3B49;
  font-size: 26rpx;
  padding: 10rpx 0 30rpx;
}
.food-comment {
  padding: 0 30rpx;
}
.comment-title {
  font: 32rpx;
  color: #333;
  font-weight: bold;
}
.comment-title-label {
  color: #666;
  font-size: 26rpx;
}
.comment-section {
  background: #fff;
}
.comPage-comment-item {
  padding-top: 25rpx;
}
.comPage-comment-info {
  display: flex;
  align-items: flex-start; 
}
.comPage-comment-person {
  display: flex;
  width: 590rpx;
  justify-content: space-between;
}
.comPage-comment-name {
  font-size: 30rpx;
  color: #333;
  width: 300rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  line-height: 1;
}
.comPage-comment-date {
  font-size: 26rpx;
  color: #999;
  line-height: 1;
}
.comPage-comment-photo {
  display: block;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.comPage-comment-assess {
  width: 590rpx;
  margin-left: 90rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #EBEBEB;
}
.comPage-comment-star {
  line-height: 30rpx;
}
.comPage-comment-star .icon-star.light {
  margin-right: 3rpx;
  font-size: 22rpx;
  color: #FFAC11;
}
.comPage-comment-star .icon-star {
  margin-right: 3rpx;
  font-size: 22rpx;
  color: #CECECE;
}
.comPage-comment-content {
  font-size: 26rpx;
  color: #333;
  line-height: 1.7;
  word-break: break-all;
}
.comPage-comment-content_pad {
  padding-top: 15rpx;
}
.comPage-comment-pics {
  width: 570rpx;
  padding-top: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  padding-bottom: 10rpx;
}
.comPage-comment-pics image {
  display: inline-block;
  width:163rpx;
  height:163rpx;
  border-radius:6rpx;
  margin-right: 10rpx;
}
.no-comment {
  padding-top: 30rpx;
  text-align: center;
  color: #666;
}
.no-more {
  text-align: center;
  padding-bottom: 20rpx;
  color: #666;
  font-size: 24rpx;
}
.all-word-btn {
  display: block;
  color: #ff3b49;
  cursor: pointer;
}
.foods-video {
  width: 100%;
  display: flex;
  justify-content: center;
  margin: 20rpx 0;
}
.foods-swiper {
  width:698rpx;
  height:435rpx;
  border-radius:10rpx;
  overflow: hidden;
  margin: 20rpx auto;
}
.foods-swiper image {
  display: block;
  width: 100%;
  height: 100%;
}