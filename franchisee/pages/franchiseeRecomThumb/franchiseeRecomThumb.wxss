.foods-info {
  padding: 30rpx 20rpx;
}
.foods-top {
  display: flex;
  justify-content: space-between;
}
.foods-top-left {
  display: flex;
}
.foods-left-num {
  width:60rpx;
  height:36rpx;
  color: #fff;
  text-align: center;
  line-height: 36rpx;
  background:linear-gradient(-90deg,rgba(246,33,48,1) 0%,rgba(255,106,99,1) 100%);
  border-radius:4rpx;
}
.foods-left-title {
  padding-left: 10rpx;
  width: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.foods-left-name {
  font-size: 36rpx;
  font-weight: 800;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1;
  min-height: 44rpx;
  letter-spacing: 2rpx;
}
.foods-left-price {
  font-size: 32rpx;
  color: #666;
}
.foods-top-right {
  display: flex;
  width: 110rpx;
  height: 90rpx;
  border-radius:4rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-right: 10rpx;
  border: 1rpx solid #D3D3D3;
}
.foods-right-count {
  text-align: center;
  font-size: 36rpx;
  font-weight: 500;
  color: #666;
  line-height: 1;
}
.foods-right-icon {
  font-size: 24rpx;
  color: #999;
  font-weight: bold;
}
.active {
  border: 1rpx solid #FF3B49;
}
.active .foods-right-count, .active .foods-right-icon {
  color: #FF3B49!important;
}
.foods-swiper {
  width:710rpx;
  height:710rpx;
  border-radius:10rpx;
  overflow: hidden;
  margin-top: 30rpx;
}
.foods-swiper .swiper-item {
  display: flex;
  align-items: center;
}
.foods-swiper image {
  display: block;
  width: 100%;
  height: 100%;
}
.current-num {
  text-align: center;
  font-size: 30rpx;
  color: #333;
  margin-top: 70rpx;
}