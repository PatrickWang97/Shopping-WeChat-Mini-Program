@charset 'utf-8';
@import "/utils/font_icon.wxss";
.invite-wrap {
  background: #F95D0D;
  min-height: 100vh;
  padding-bottom: 98rpx;
}
.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.invite-main-bg {
  background: url('https://develop.zhichiwangluo.com/zhichi_frontend/static/webapp/images/xcx-inviteNew/invite-main.png') no-repeat;
  background-position: 100% 100%;
  background-size: contain;
  width: 100%;
  height: 552rpx;
}
.invite-rule {
  background: #F93906;
  border-radius: 0 0 46rpx 46rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  position: absolute;
  right: 48rpx;
  width: 96rpx;
  padding: 12rpx 22rpx 24rpx;
  box-sizing: border-box;
  letter-spacing: 2rpx;
  top: 0;
}
.invite-content {
  padding: 0 34rpx;
  margin-top: -98rpx;
}
.invite-nums-wrap {
  background: #fff;
  border-radius: 10rpx 50rpx 10rpx 50rpx;
  border: 10rpx solid #FFC592;
  position: relative;
  margin-bottom: 40rpx;
}
.invite-nums-box {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 38rpx 60rpx;
}
.invite-first {
  text-align: center;
}
.invite-nums {
  color: #FF4C29;
  font-size: 50rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}
.invite-title {
  font-size: 24rpx;
  color: #808080;
}
.invite-check-detail {
  background:linear-gradient(180deg,#ff7a3a,#fe432c);
  border-radius:0rpx 50rpx 10rpx 50rpx;
  color: #FFF;
  font-size: 22rpx;
  height: 158rpx;
  width: 46rpx;
  box-sizing: border-box;
  padding: 12rpx;
  text-align: center;
  position: absolute;
  right: 0;
  top: 0;
}
.invite-rewards-tips {
  background: #fff;
  display: flex;  
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 20rpx 20rpx 28rpx;
  border-radius: 10rpx;
  margin-bottom: 60rpx;
  box-shadow: 10rpx 10rpx 0 #FDCE8F;
}
.invite-get-box {
  background: rgba(255, 105, 47, .18);
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;  
  display: flex;
  align-items: center;
  justify-content: center;
}
.invite-get-box image {
  width: 40rpx;
  height: 40rpx;
}
.invite-tips {
  color: #2F1827;
  font-size: 24rpx;
  margin-left: 12rpx;
}
.invite-get-button {
  width:110rpx;
  height:48rpx;
  background:linear-gradient(180deg,#ff7a3a,#fe432c);
  border-radius:24rpx;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
  line-height: 48rpx;
}
.invite-count-rewards {
  width: 100%;
  text-align: center;
  margin-bottom: 40rpx;
}
.invite-count-rewards image {
  width: 240rpx;
  height: 36rpx;
}
.invite-rewards-wrap {
  background: #fff;
  border-radius: 30rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 50rpx;
}
.invite-rewards-item {
  background:linear-gradient(0deg,rgba(250,77,3,1),rgba(255,126,10,1),rgba(255,126,10,1));
  border-radius:10rpx;
  margin-bottom: 22rpx;
  color: #fff;
  position: relative;
  display: inline-block;
  padding: 30rpx 22rpx 20rpx;
}
.invite-rewards-item::before {
  content: '';
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  position: absolute;
  left: -14rpx;
  top: 50%;
  transform: translateY(-50%);
  background: #fff;
}
.invite-rewards-item::after {
  content: '';
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  position: absolute;
  right: -14rpx;
  top: 50%;
  transform: translateY(-50%);
  background: #fff;
}
.invite-rewards-item:nth-child(2n-1) {
  margin-right: 22rpx;
}
.invite-check-records {
  font-size: 24rpx;
  color:#FF6228;
  width: 100%;
  text-align: center;
  padding-top: 18rpx;
}
.icon-arrow-records {
  margin-left: 10rpx;
  font-size: 16rpx;
  font-weight: bold;
  background: rgba(255, 98, 40, .12);
  text-align: center;
  line-height: 22rpx;
  border-radius: 50%;
  display: inline-block;
  padding: 4rpx 6rpx;
}
.invite-rewards-badge {
  color:#FB4A04;
  font-size: 22rpx;
  background:linear-gradient(-3deg,rgba(251,252,78,1),rgba(253,206,31,1));
  border-radius:18rpx 18rpx 18rpx 4rpx;
  padding: 6rpx 14rpx;
  position: absolute;
  right: -6rpx;
  top: -6rpx;
}
.invite-rewards-value {
  font-size: 50rpx;
  margin-bottom: 10rpx;
  text-align: center;
}
.invite-rewards-coin {
  vertical-align: super;
  font-size: 26rpx;
  margin-top: 50rpx;
}
.invite-rewards-type {
  width:254rpx;
  height:50rpx;
  background:rgba(255,255,255,.12);
  border-radius:10rpx;
  text-align: center;
  font-size: 22rpx;
  line-height: 50rpx;
}
.invite-friends-wrap {
  text-align: center;
  width: 100%;
  margin-bottom: 60rpx;
}
.invite-friends-button {
  width:590rpx;
  height:80rpx;
  line-height: 80rpx;
  background:linear-gradient(180deg,rgba(254,227,1,1),rgba(254,162,2,1));
  border-radius:40rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  text-shadow:0px 2px 4px rgba(163,70,8,0.4);
  box-shadow: 0 10rpx 0 #FD8402;
}
.invite-mycode-title {
  width: 100%;
  height: 36rpx;
  text-align: center;
  margin-bottom: 40rpx;
}
.invite-mycode-title image {
  width: 274rpx;
  height: 36rpx;
}
.invite-my2code {
  width: 100%;
  text-align: center;
  margin-bottom: 40rpx;
}
.invite-my2code image {
  width: 354rpx;
  height: 354rpx;
  border: 10rpx solid #FFC592;
  border-radius: 10rpx;
}
.invite-newcomers-wrap {
  text-align: center;
  width: 100%;
} 
.invite-newcomers-tips {
  font-size: 26rpx;
  color: rgba(255, 255, 255, .7);
  margin-bottom: 20rpx;
}
.invite-newcomers-num {
  font-size: 60rpx;
  color: #fff;
}
.newcomer-gift-item {
  background: url('https://develop.zhichiwangluo.com/zhichi_frontend/static/webapp/images/xcx-inviteNew/border-bg.png') no-repeat;
  background-size: contain;
}
.invite-calculate-wrap {
  width: 170rpx;
  height: 60rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  align-items: center;
  justify-content: space-between;
  border:1rpx solid rgba(255,238,235,1);
  border-radius:28rpx;
  padding: 4rpx;
  box-sizing: border-box;
}
.invite-sub {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: #FFEEEB;
  color: #FF4C29;
  text-align: center;
  line-height: 50rpx;
  font-size: 24rpx;
}
.invite-add {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: #FF4C29;
  color: #fff;
  text-align: center;
  line-height: 50rpx;
  font-size: 24rpx;
}
.invite-value {
  font-size: 24rpx;
  color: #333;
}
.get-rewards-wrap {
  background: url('https://develop.zhichiwangluo.com/zhichi_frontend/static/webapp/images/xcx-inviteNew/bg2.png') no-repeat;
  background-size: contain;
  width: 632rpx;
  height: 182rpx;
  position: absolute;
  left: -10rpx;
  bottom: -40rpx;
}
.get-rewards-button {
  width:448rpx;
  height:70rpx;
  border-radius:36rpx;
  color: #664012;
  font-size: 28rpx;
  text-align: center;
  line-height: 70rpx;
  background:linear-gradient(-3deg,rgba(251,252,78,1),rgba(253,206,31,1));
  position: absolute;
  bottom: 32rpx;
  left: 50%;
  transform: translate(-50%);
}
.canvas {
  transform: translateX(999rpx);
  width:0;
  height:0;
  overflow:hidden;
  position: absolute;
  right: 99999999999rpx;
}
.no-activity {
  text-align: center;
  padding-top: 130rpx;
}
.no-activity image {
  width: 266rpx;
  height: 196rpx;
}
.no-activity-tip {
  margin-top: 40rpx;
  color: #666666;
  font-size: 26rpx;
}