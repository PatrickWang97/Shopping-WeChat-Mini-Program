page {
  color: #333;
  background-color: #f3f3f3;
}
.gray {
  color: #999;
}
.flex {
  display: flex;
  align-items: center;
}
.self-start {
  align-self: flex-start;
}
.self-end {
  align-self: flex-end;
}
.row-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.flex-column {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.row-center {
  display: flex;
  justify-content: center;
  align-items: center;
}
.column-center {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.theme-color {
  color: #ff7100;
}
.evoucher-refund-container {
  padding: 20rpx 24rpx;
}
.evoucher-item {
  display: flex;
  position: relative;
  width: 654rpx;
  padding: 20rpx 24rpx 32rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  line-height: 26rpx;
  color: #999;
  background-color: #fff;
}
.evoucher-item .item-img {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.evoucher-item .item-img image {
  max-width: 100%;
  max-height: 100%;
}
.evoucher-item .item-content {
  width: 462rpx;
  margin-left: 20rpx;
}
.evoucher-item .item-name {
  max-width: 455rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.evoucher-item .item-species {
  padding: 20rpx 0 18rpx;
}
.evoucher-item .item-price {
  margin-top: 36rpx;
}
.goods-number-box {
  vertical-align: top;
  display: inline-block;
  margin-top: -2rpx;
}
.goods-number-box.pull-right {
  display: flex;
  width: 160rpx;
  border: 2rpx solid #f0f0f0;
  padding: 4rpx;
  border-radius: 28rpx;
}
.goods-num-mius,
.goods-num-plus,
.goods-num-box {
  box-sizing: border-box;
  display: inline-block;
  font-size: 24rpx;
  vertical-align: middle;
  padding: 0;
  min-height: 44rpx;
}
.goods-num-mius,
.goods-num-plus {
  width: 50rpx;
  height: 50rpx;
  background: #f5f5f5;
  border-radius: 50%;
  text-align: center;
  line-height: 46rpx;
  color: #8C8C8C;
  border: none;
  max-height: 50rpx;
  font-size: 40rpx;
  font-weight: 500;
}
.no-more.goods-num-plus,
.no-more.goods-num-mius {
  color: #ccc;
}
.goods-num-box {
  width: 60rpx;
  text-align: center;
  font-size: 24rpx;
  line-height: 50rpx;
  min-height: 50rpx;
  max-height: 50rpx;
  border: none;
}
.evoucher-box {
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  background-color: #fff;
}
.evoucher-box .price-title text{
  padding-right: 4rpx;
  vertical-align: middle;
  color: #ff7100;
}
.evoucher-box .box-title {
  display: inline-block;
  margin-bottom: 22rpx;
}
.evoucher-box.intro textarea {
  width: 594rpx;
  height: 112rpx;
  padding: 24rpx;
  line-height: 1.4;
  background-color: #f9f9f9;
}
.evoucher-box .add-img {
  text-align: center;
  font-size: 22rpx;
  border: 1px dashed #D2D2D2;
  color: #D2D2D2;
  display: inline-block;
  vertical-align: top;
  margin-bottom: 20rpx;
}
.evoucher-box .add-img .icon-fn-camera {
  font-size:80rpx;
  margin-top: 12rpx;
}
.evoucher-box .img-box > view{
  width: 150rpx;
  height: 150rpx;
  box-sizing: border-box;
  vertical-align: middle;
  margin-bottom: 20rpx;
  display: inline-block;
  margin-right: 30rpx;
  position: relative;
}
.evoucher-box .img-box > view:nth-child(4n){
  margin-right: 0;
}
.evoucher-box .img-box image {
  width: 100%;
  height: 100%;
}
.evoucher-box .delete-img {
  position: absolute;
  right: 0;
  top: 0;
  width: 30rpx;
  height: 30rpx;
  display: inline-block;
  text-align: center;
  line-height: 30rpx;
  color: #fff;
  font-size: 16rpx;
  background: rgba(0, 0, 0, 0.3)
}
.refund-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 122rpx;
  background-color: #fff;
}
.refund-btn button {
  width: 690rpx;
  height: 88rpx;
  border-radius: 44rpx;
  margin-top: 18rpx;
  font-size: 30rpx;
  line-height: 88rpx;
  color: #fff;
  background:linear-gradient(90deg,rgba(255,150,0,1),rgba(255,114,0,1));
}