.page-contnet {
  padding: 0 30rpx;
  background: #fff;
}
.icon-rightarrow {
  font-size: 20rpx;
  color: #D2D2D2;
  padding-left: 10rpx;
}
.row-input {
  display: flex;
  justify-content: space-between;
  padding: 36rpx 0;
  border-bottom: 1rpx solid #F3F3F3;
}
.input-content {
  text-align: right;
}
.explain {
  padding: 26rpx 30rpx 0 0;
  text-align: right;
  color: #999999;
  font-size: 24rpx;
}
.bottom {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
}
.bottom-btn {
  width: 100%;
  height: 74rpx;
  background: #3091F2;
  color: #ffffff;
  font-size: 30rpx;
  border-radius: 0;
}