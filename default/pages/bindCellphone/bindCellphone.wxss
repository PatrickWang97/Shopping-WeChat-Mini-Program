page {
  background-color: #fff;
  color: #000;
}
input {
  color: #333;
}
.phcolor {
  color: #999;
}
.header-wrap {
  width: 100%;
  height: 320rpx;
  font-size: 55rpx;
  color: #000;
  position: relative;
}
.bindphone-header-bg{
  width: 100%;
  height: 100%;
}
.bindphone-header-content{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.bindphone-header-title{
  margin-top: 113rpx;
  margin-left: 83rpx;
  font-size: 50rpx;
  color: #fff;
  font-weight: bold;
}
.bindphone-header-logo-wrap{
  position: absolute;
  top: 83rpx;
  right: 67rpx;
  width: 113rpx;
  height: 113rpx;
  border-radius: 50%;
  background-color: rgba(225, 255, 255, 0.2);
}
.bindphone-header-logo{
  margin: 5rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 3rpx solid #fff;
  background-color: #fff;
}
.verify-wrap{
  width: 600rpx;
  margin: 100rpx auto 0;
}
.bind-new-tel-wrap{
  margin-top: 60rpx;
}
.bindphone-main-wrap{
  width: 600rpx;
  margin: 0 auto;
}
.bind-new-options {
  display: -webkit-box;
  display: -webkit-flex;
  display: -moz-box;
  display: -ms-flexbox;
  display: flex;
  width: 100%;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #999;
  border-bottom: 1px solid #F3F3F3;
}
.bind-new-options > view {
  -webkit-box-flex: 1;
  -moz-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  text-align: center;
  padding-bottom: 20rpx;
}
.bind-new-options > view.active {
  font-weight: bold;
  color: #3091f2;
  border-bottom: 2px solid #3091f2;
}
.authorization {
  width: 600rpx;
  height: 94rpx;
  margin-top: 66rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  color: #fff !important;
  border-radius: 47rpx;
  line-height: 94rpx;
  background: -webkit-linear-gradient(right,#53B5FA, #3091F2);
  background: linear-gradient(to right, #53B5FA, #3091F2);
  box-shadow: 0px 2px 4px 0px rgba(3,145,242,0.45);
}
.verify-row {
  position: relative;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #F3F3F3;
  font-size: 28rpx;
  color: #999;
  height: 95rpx;
  line-height: 95rpx;
  padding-left: 22rpx;
  margin-top: 20rpx;
}
.verify-row .area-collect {
  width: 155rpx;
  height: 95rpx;
}
.verify-row .area-collect .picker {
  width: 120rpx;
  color: #333;
}
.verify-row .area-collect .picker .nationCode{
  display: inline-block;
  width: 80rpx;
  vertical-align: top;
}
.verify-row .area-collect .picker label{
  color: #666;
  vertical-align: top;
}
.verify-row input {
  display: flex;
  align-items: center;
  height: 100%;
  padding-left: 20rpx;
  width: 350rpx;
}
.verify-row .verify-item-icon{
  font-size: 30rpx;
  color: #D2D2D2;
}
.phonenum input {
  padding-left: 20rpx;
  width: 100%;
}
.postCode .get-code-btn {
  width: 190rpx;
  color: #3091F2;
  font-size: 28rpx;
  text-align: center;
}
.postCode .get-code-btn text{
  display: inline-block;
  width: 100%;
  text-align: center;
  border-left: 1px solid #F3F3F3;
  line-height: 30rpx;
}
.option-btn {
  width: 600rpx;
  height: 94rpx;
  margin-top: 66rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  color: #fff !important;
  border-radius: 47rpx;
  line-height: 94rpx;
  text-align: center;
  background: -webkit-linear-gradient(right,#53B5FA, #3091F2);
  background: linear-gradient(to right, #53B5FA, #3091F2);
  box-shadow: 0px 2px 4px 0px rgba(3,145,242,0.45);
}
.bind-new-tel-btn.disabled {
  opacity: 0.7;
}
.pic-code {
  width: 140rpx;
  height: 70rpx;
}
.pic-code-wrap {
  width: 190rpx;
  height: 70rpx;
  text-align: center;
}
.back-home-btn {
  position: fixed;
  bottom: 220rpx;
  right: 20rpx;
  z-index: 2;
  height: 84rpx;
  width: 84rpx;
  color: #fff;
  text-align: center;
  line-height: 84rpx;
  font-size: 40rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.4)
}
.bind-new-tel-tip{
  margin-top: 40rpx;
  font-size: 24rpx;
  text-align: center;
  color: #BFBFBF;
}
.other-way {
  margin-top:40rpx;
  font-size: 24rpx;
  text-align: center;
  color: #BFBFBF;
}
.trun-Page {
  color: #3091F2;
}