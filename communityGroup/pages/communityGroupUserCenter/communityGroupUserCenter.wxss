page {
  padding-bottom: 30rpx;
  background-color: #fff;
}
.top-content {
  position: relative;
  background: linear-gradient(0deg, rgba(255, 113, 0, 1), rgba(255, 150, 0, 1));
}
.top-section {
  padding: 32rpx 32rpx 0;
  text-align: center;
  height: 428rpx;
  background-image: url('http://cdn.jisuapp.cn/zhichi_frontend/static/webapp/images/promotion/promotion-center.png');
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.top-section image {
  width: 103rpx;
  height: 103rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
}
.top-section .top-section-detail {
  display: inline-block;
  line-height: 44rpx;
}
.top-section .icon-rightarrow {
  color: #fff;
  margin-left: 20rpx;
  font-size: 24rpx;
}
.detail-level {
  color: #ff8400;
  margin-top: 10rpx;
  font-size: 20rpx;
}
.detail-level>view {
  display: inline-block;
  background-color: #fff;
  padding: 0 20rpx;
  line-height: 30rpx;
  border-radius: 15rpx;
}
.detail-level>view text.icon-vip {
  color: #ff7100;
  margin-left: 0;
  margin-right: 6rpx;
  vertical-align: middle;
}
.detail-level>view text {
  vertical-align: middle;
}
.top-commission {
  padding: 20rpx 32rpx 0;
}
.middle-section {
  display: -webkit-flex;
  display: flex;
  position: absolute;
  bottom: -92rpx;
  left: 20rpx;
  width: 710rpx;
  height: 80rpx;
  padding: 36rpx 0;
  background-color: #fff;
  border-radius: 10rpx;
  z-index: 10;
  box-shadow: 0px 0px 40px 0px rgba(255, 108, 0, 0.14);
}
.middle-section .withdraw-item:nth-child(2),
.middle-section .withdraw-item:nth-child(3) {
  border-left: 2rpx solid #f3f3f3;
}
.middle-section .withdraw-item {
  -webkit-flex: auto;
  flex: auto;
  text-align: center;
}
.withdraw-item .item-title {
  line-height: 40rpx;
  color: #000;
  font-size: 28rpx;
}
.withdraw-item .item-price {
  line-height: 40rpx;
  color: #999;
  font-size: 26rpx;
}
.withdraw-title {
  text-align: left;
  color: #fff;
  line-height: 39rpx;
  margin-bottom: 30rpx;
  padding-left: 4rpx;
  opacity: 0.6;
  font-size: 26rpx;
}
.withdraw-total {
  float: left;
  color: #fff;
  font-size: 60rpx;
  line-height: 47rpx;
}
.withdraw-btn {
  float: right;
  line-height: 50rpx;
  background-color: #fff;
  color: #ff7100;
  border-radius: 25rpx;
  font-size: 28rpx;
  padding: 0 25rpx;
}
.withdraw-btn .ico-moon {
  color: #ff7100;
  margin-left: 0;
  font-size: 20rpx;
  margin-right: -6rpx;
}
.current-commission {
  margin: 0 15rpx;
}
.current-commission,
.history-commission {
  color: #f05b10;
}
.bottom-section {
  margin-top: 96rpx;
  margin-bottom: 96rpx;
  color: #666;
  background-color: #fff;
  text-align: center;
  font-size: 24rpx;
}
.bottom-section-item {
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
}
.bottom-section-item:last-child {
  border-right: none;
}
.bottom-section-item .ico-moon {
  margin-bottom: 28rpx;
  font-size: 70rpx;
  color: #ff7100;
}
.bottom-section-item .ico-moon.icon-subshop {
  padding: 6rpx 0;
  font-size: 58rpx;
}
.bottom-sub-item {
  width: 33.3%;
  padding: 36rpx 0;
  box-sizing: border-box;
}
.bottom-button {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #ffffff;
  height: 124rpx;
}
.promotion-btn {
  width: 710rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  color: #fff;
  background-color: #ff7100;
  text-align: center;
  border-radius:6rpx;
  margin: 18rpx auto;
}
.total-money {
  font-size: 24rpx;
  margin-top: 10rpx;
  color: #999;
}
.remain-commission {
  font-size: 32rpx;
  color: #666;
}
.apply-info {
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 10;
}
.apply-info .apply-info-message {
  width: 560rpx;
  padding-top: 43rpx;
  background-color: #fff;
  border-radius: 10rpx;
  text-align: center;
  margin: 230rpx auto 0;
}
.apply-info-message .message-title {
  line-height: 44rpx;
  color: #000;
  font-size: 30rpx;
  font-weight:bold;
}
.apply-info-message .message-text {
  padding: 0 30rpx;
  max-height: 350rpx;
  line-height: 44rpx;
  overflow-y: scroll;
  color: #333;
  text-align: left;
  margin-bottom: 50rpx;
  margin-top: 30rpx;
  word-break: break-all;
  font-size: 26rpx;
}
.apply-info-message .block-text-title {
  padding:0 30rpx;
  line-height:44rpx;
  color:#333;
  text-align:center;
  margin-top:30rpx;
  word-break:break-all;
  font-size:28rpx;
}
.apply-info-message .block-text {
  padding:0 30rpx;
  max-height:350rpx;
  line-height:44rpx;
  overflow-y:scroll;
  color:#333;
  text-align:center;
  margin-bottom:30rpx;
  word-break:break-all;
  font-size:28rpx;
}
.apply-info-message .block-show {
  font-size: 22rpx;
  padding: 0 30rpx;
  text-align: left;
  color:#333;
}
.apply-info-message .message-btn {
  line-height: 79rpx;
  border-top: 1rpx solid #ebebeb;
  color: #ff7100;
  font-size: 30rpx;
}
.apply-list-item-auto {
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  padding: 25rpx 30rpx 25rpx 30rpx;
  color: #333;
  background-color: #fff;
  text-align: right;
  font-size: 28rpx;
}
.apply-list-item-auto view:nth-child(2) {
  width: calc(100% - 170rpx);
  word-break: break-all;
}
.delivery-model {
  margin-left: 20rpx;
}
.color-666 {
  color: #666;
}
checkbox {
  width: 40rpx;
  height: 60rpx;
}
checkbox .wx-checkbox-input {
  width: 25rpx;
  height: 25rpx;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: #FF7100;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
.extra-info-box text {
  padding-left: 30rpx;
  line-height: 80rpx;
  color: #666666;
  font-size: 28rpx;
}