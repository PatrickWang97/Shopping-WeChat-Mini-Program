page {
  background-color:rgb(243, 243, 243);
}
.promotion-tab {
  -webkit-display: flex;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
  height: 88rpx;
  margin-bottom: 16rpx;
  background-color: #fff;
  text-align: center;
  line-height: 88rpx;
  font-size: 28rpx;
  font-weight:bold;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}
.promotion-tab .tab-item {
  -webkit-flex: auto;
  flex: auto;
}
.promotion-tab .tab-item view {
  display: inline-block;
}
.promotion-tab .tab-active view {
  color: #ff7100;
  border-bottom: 2rpx solid #ff7100;
}
.apply-content {
  padding-left: 30rpx;
  background-color: #fff;
}
.apply-list {
  background-color: #eee;
  font-size: 32rpx;
}
.apply-list-item {
  display: -webkit-flex;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
  -webkit-justify-content: center;
  justify-content: space-between;
  padding-right: 30rpx;
  background-color: #fff;
  line-height: 84rpx;
  border-bottom: 1rpx solid rgb(235, 235, 235);
  font-size:28rpx;
  color:#333;
}
.apply-list-item>view:last-child {
  max-width: 520rpx;
  text-overflow:ellipsis;
  overflow:hidden;
  white-space:nowrap;
}
.delivery-model{
  margin-left:20rpx;
}
.apply-list>.apply-list-item:last-child {
  border: none;
}
.apply-list-item .list-item-label {
  -webkit-flex-basis: 170rpx;
  flex-basis: 170rpx;
  overflow: hidden;
}
.apply-list-item .list-item-input {
  flex: auto;
  text-align: right;
}
.apply-list-item .list-item-img {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  overflow: hidden;
}
.apply-list-item .list-item-img image {
  display: block;
  width: 100%;
  height: 100%;
}
.apply-list-item .list-item-icon {
  flex: auto;
  text-align: right;
  color: rgb(153, 153, 153);
  font-size: 26rpx;
}
.apply-list-item-auto {
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-between;
  justify-content: space-between;
  padding: 25rpx 30rpx 25rpx 0;
  color: #333;
  background-color: #fff;
  text-align: right;
  font-size: 28rpx;
}
.apply-list-item-auto view:nth-child(2) {
  width: calc(100% - 170rpx);
  word-break: break-all;
}
.extra-info-box text {
  padding-left: 30rpx;
  line-height: 80rpx;
  color: #666666;
  font-size: 28rpx;
}
.tab-content {
  padding-bottom: 124rpx;
}
.apply-explain {
  height: 106rpx;
  line-height: 106rpx;
  color: #FF7100;
  font-size: 26rpx;
  text-align: center;
}
.bottom-button {
  height: 124rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
}
.bottom-button button {
  width: 710rpx;
  margin: 18rpx auto;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  border-radius: 6rpx;
  color: #fff;
  background-color: #ff7100;
  text-align: center;
}
.apply-info {
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 10;
}
.apply-info .apply-info-message {
  width: 560rpx;
  padding-top: 43rpx;
  background-color: #fff;
  border-radius: 10rpx;
  text-align: center;
  margin: 230rpx auto 0;
}
.apply-info-message .message-title {
  line-height: 44rpx;
  color: #000;
  font-size: 30rpx;
}
.apply-info-message .message-text {
  padding: 0 30rpx;
  max-height: 350rpx;
  line-height: 44rpx;
  overflow-y: scroll;
  color: #333;
  text-align: left;
  margin-bottom: 50rpx;
  margin-top: 30rpx;
  word-break: break-all;
  font-size: 26rpx;
}
.apply-info-message .message-btn {
  line-height: 79rpx;
  border-top: 1rpx solid #ebebeb;
  color: #ff7100;
  font-size: 30rpx;
}