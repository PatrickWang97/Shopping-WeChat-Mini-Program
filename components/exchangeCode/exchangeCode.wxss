.exchange-code-icon {
  position: fixed;
  bottom: 190rpx;
  z-index: 1;
  right: 0;
}
.exchange-code-bc {
  width: 160rpx;
  height: 124rpx;
}
.mask {
  position: fixed;
  height: 100%;
  width: 100%;
  background:rgba(0,0,0,1);
  opacity:0.4;
  z-index: 1;
}
.exchange-code-input {
  width:560rpx;
  height:376rpx;
  background: white;
  border-radius:10rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -80%);
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 1;
}
.exchange-code-input-title {
  font-size:32rpx;
  font-family:Microsoft YaHei;
  font-weight:bold;
  color:rgba(51,51,51,1);
  line-height:46rpx;
}
.exchange-code-input-title {
  margin-top: 40rpx;
  margin-bottom: 45rpx;
}
.exchange-code-input-content {
  width:479rpx;
  height: 78rpx;
  line-height: 78rpx;
  background:rgba(250,250,250,1);
  border-radius:10rpx;
  margin-bottom: 64rpx;
}
.place-holder {
  text-align: center;
}
.btn-box {
  display: flex;
}
.exchange-code-btn {
  width:224rpx;
  height:70rpx;
  border-radius:35rpx;
  line-height:70rpx;
  color:rgba(255,255,255,1);
  text-align: center;
}
.cancel {
  background:rgba(217,217,217,1);
}
.confirm {
  background:linear-gradient(125deg,rgba(255,150,0,1) 0%,rgba(255,114,0,1) 100%);
  box-shadow:0px 3px 8px 0px rgba(255,96,0,0.4);
  margin-left: 31rpx;
}