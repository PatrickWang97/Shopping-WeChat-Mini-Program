@charset 'utf-8';
@import "/utils/font_icon.wxss";
.page-qr-code-dialog {
  position: fixed;
  left: 0;
  right: 0;
  top: 100%;
  bottom: 0;
  z-index: 50;
  background-color: rgba(0, 0, 0, .4);
}
.page-qr-code {
  position: absolute;
  left: 50%;
  top: 50%;
  border-radius: 10rpx;
  text-align: center;
  background: #fff;
  overflow: auto;
  transform: translate(-50%, -50%);
}
.page-bottom-dialog {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 750rpx;
  background-color: rgba(238, 238, 238, 1);
}
.buttonthree {
  border-radius: 12rpx 12rpx 0 0;
  height: 226rpx;
  color: #333333;
  font-size: 28rpx;
  display: flex;
  background: #fff;
  padding: 0 85rpx;
  box-sizing: border-box;
}
.button {
 border-radius: 0;
  height: 100rpx;
