@charset 'utf-8';
@import "/utils/font_icon.wxss";
.goods-detail-dialog {
  background: rgba(0, 0, 0, 0.4);
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  top: 0;
  z-index: 21;
}
.goods-detail-dialog.mask {
  background: rgba(0, 0, 0, 0.4);
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  top: 0;
  z-index: -1;
}
.goods-detail-contain {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
}
.goods-cover {
  width: 200rpx;
  height: 200rpx;
  display: inline-block;
  position:relative;
  top: -40rpx;
  margin: 0 20rpx;
}
.select-goods-info {
  display: inline-block;
  width: 500rpx;
  vertical-align: top;
}
.goods-price {
  font-size: 30rpx;
  color: #ff7100;
  margin-top: 40rpx;
}
.goods-stock {
  color: #999;
  font-size: 24rpx;
  margin: 10rpx 0;
}
.select-model {
  font-size: 24rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.icon-closes {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  border-radius: 50%;
  border: 1rpx solid #d2d2d2;
  display: inline-block;
  width: 34rpx;
  height: 34rpx;
  line-height: 36rpx;
  text-align: center;
  font-size: 20rpx;
  color: #d2d2d2;
}
.goods-detail-content {
  padding: 0 20rpx;
  max-height: 500rpx;
  overflow-y: auto;
}
.goods-model {
  border-top: 1rpx solid #F3F3F3;
  padding-top: 30rpx;
}
.model-title {
  color: #333;
  font-size: 26rpx;
}
.sub-model .subModel {
  display: inline-block;
  line-height: 52rpx;
  padding: 0 20rpx;
  border-radius: 4rpx;
  background: #F2F2F2;
  border: 1rpx solid #F2F2F2;
  font-size: 24rpx;
  color: #333;
  margin: 25rpx 20rpx 30rpx 0;
  vertical-align: middle;
}
.sub-model .subModel.select {
  background: #FFF7F0;
  color: #ff7100;
  border-color: #ff7100;
}
.goods-num-title {
  color: #333333;
  font-size: 26rpx;
}
.goods-minus,.goods-plus,.goods-count {
  display: inline-block;
  width: 50rpx;
  line-height: 44rpx;
  min-height: 44rpx;
  height: 44rpx;
  max-height: 44rpx;
  padding: 0;
  vertical-align: middle;
  box-sizing: border-box;
  text-align: center;
  color: #C9C9C9;
} 
.goods-count {
  font-size: 28rpx;
  color: #333;
}
.goods-num-contain {
  padding: 30rpx 20rpx 0;
  border-top: 1rpx solid #F3F3F3;
}
.good-number-box{
  float: right;
}
.goods-shopping-bottom {
  line-height: 88rpx;
  color: #fff;
  text-align: center;
  margin-top: 40rpx;
  position: relative;
  bottom: 0;
  left: 0;
  right: 0;
  font-size: 30rpx;
  display: flex;
}
.goods-shopping-bottom .add-shoppingcart,
.goods-shopping-bottom .now-buy{
  flex: 1;
}
.goods-shopping-bottom .add-shoppingcart {
  background: #ff7100;
}
.goods-shopping-bottom .now-buy {
  background: #ffac0c;
}
.virtualPrice {
  color: #a8a8a8;
  font-size: 24rpx;
  display: inline-block;
  text-decoration: line-through;
  vertical-align: text-bottom;
}
.member-logo {
  position: relative;
  bottom: 2px;
  display: inline-block;
  width: 76rpx;
  text-align: center;
  height: 26rpx;
  line-height: 26rpx;
  border-radius: 13rpx;
  font-size: 18rpx;
  color: #ff7100;
  background: rgba(255, 113, 0, 0.1);
  margin: 0 19rpx 0 15rpx;
}
.goods-detail-contain.two {
  border-radius: 18rpx 18rpx 0 0;
  max-height: 1050rpx;
  background: #fff;
  padding: 30rpx;
  box-sizing: border-box;
  overflow: auto;
}
.two .goods-detail-header {
  display: flex;
}
.two .icon-closes {
  top: 40rpx;
  right: 40rpx;
}
.two .goods-cover {
  width: 154rpx;
  height: 154rpx;
  top: 0;
  border-radius: 10rpx;
}
.two .goods-price {
  font-size: 38rpx;
  font-weight: bold;
  margin-top: 10rpx;
}
.two .goods-stock {
  font-size: 26rpx;
  color: #999;
}
.two .select-model {
  font-size: 26rpx;
  color: #999;
}
.two .goods-model {
  border: none;
}
.two .goods-dialog-content {
  max-height: 490rpx;
  overflow: auto;
}
.two .model-title {
  padding-top: 60rpx;
  padding-bottom: 40rpx;
  margin: 0;
  font-size: 26rpx;
  color: #333;
  font-weight: 600;
}
.two .sub-model {
  display: inline-block;
  vertical-align: middle;
}
.two .sub-model .subModel {
  color: #333;
  border: 2rpx solid #f5f5f5;
  padding: 0 26rpx;
  line-height: 106rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-right: 24rpx;
  margin-bottom: 10rpx;
  margin-top: 0;
}
.two .goods-num-contain {
  height: 58rpx;
  line-height: 58rpx;
  margin-top: 40rpx;
  border: none;
  padding: 0;
}
.two .goods-num-title {
  font-size: 26rpx;
  font-weight: 600;
}
.two .good-number-box.pull-right {
  display: flex;
  width: 160rpx;
  border: 2rpx solid #f0f0f0;
  padding: 4rpx;
  border-radius: 28rpx;
}
.two .goods-minus,
.two .goods-plus {
  width: 50rpx;
  height: 50rpx;
  background: #f5f5f5;
  border-radius: 50%;
  text-align: center;
  line-height: 46rpx;
  color: #666;
  border: none;
  max-height: 50rpx;
}
.two .goods-count {
  width: 60rpx;
  text-align: center;
  font-size: 24rpx;
  line-height: 50rpx;
  min-height: 50rpx;
  max-height: 50rpx;
  border: none;
}
.two .add-shoppingcart,
.two .now-buy {
  font-size:30rpx;
  font-weight:400;
  width:339rpx;
  height:88rpx;
  border-radius:20rpx 4rpx 4rpx 20rpx;
}
.two .now-buy {
  border-radius:4rpx 20rpx 20rpx 4rpx;
  width:342rpx;
  margin-left: 8rpx;
}
.two .shoppingcart {
  border-radius:4rpx;
}
.goods-detail-contain.three {
  max-height: 936rpx;
  background: #fff;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-radius: 35rpx 35rpx 0 0;
  padding-bottom: 40rpx;
}
.three .goods-cover {
  float: left;
  width: 148rpx;
  height: 148rpx;
  margin-right: 32rpx;
  position: relative;
  top: 35rpx;
  border-radius: 4rpx;
  overflow: hidden;
}
.three .goods-detail-header {
  display: flex;
  margin-bottom: 30rpx;
}
.three .goods-price {
  font-size: 34rpx;
}
.three .goods-stock {
  font-size: 28rpx;
  color: #B0B0B0;
}
.three .select-model {
  font-size: 28rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.three .model-title {
  font-size: 30rpx;
  color: #B0B0B0;
}
.three .goods-dialog-content .goods-model {
  border-top:none;
  border-bottom: 1px solid #f3f3f3;
}
.three .goods-dialog-content .pay-goods-attrs,
.three .goods-num-contain  {
  border:none;
}
.three .goods-num-title {
  color: #B0B0B0;
  font-size: 30rpx;
}
.three .goods-minus,
.three .goods-count,
.three .goods-plus {
  width: 56rpx;
  line-height: 56rpx;
  max-height: 56rpx;
  min-height: 56rpx;
  border: none;
  background: #eee;
  margin-right: 4rpx;
  border-radius: 3rpx;
}
.three .goods-plus{
  color: #333;
}
.three .add-shoppingcart {
  border-radius: 44rpx 0 0 44rpx;
}
.three .now-buy {
  border-radius: 0 44rpx 44rpx 0;
}
.three .shoppingcart {
  border-radius: 44rpx;
}