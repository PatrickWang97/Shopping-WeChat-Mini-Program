.verification-code {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  text-align: center;
}
.verification-code-img {
  width: 100%;
  height: 100%;
}
.verification-code-text {
  color: #fff;
  margin-top: 20rpx;
  font-size: 30rpx;
}
.verification-code-tips {
  font-size: 32rpx;
  color: #fff;
  margin-top: 290rpx;
}
.verification-image-box {
  width: 460rpx;
  height: 460rpx;
  margin-top: 70rpx;
  display: inline-block;
  position: relative;
}
.verification-code-tips {
  font-size: 32rpx;
  color: #fff;
  margin-top: 240rpx;
}
.verification-code-finished {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.verification-code-finished .finished-text {
  position: absolute;
  color: #fff;
  background: #f2303e;
  top: -50rpx;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
}
