@charset 'utf-8';
@import "/utils/font_icon.wxss";
.pay-gift{
  width: calc(100% - 60rpx);
  padding: 30rpx;
  position: relative;
  font-size: 24rpx;
  background: #fff;
}
.pay-gift>.title,
.pay-gift .receive-tip {
  font-size: 28rpx;
  text-align: center;
}
.pay-gift>.title{
  position: relative;
  left: 50%;
  transform: translate(-50%);
  margin-bottom: 30rpx;
  display: inline-block;
}
.pay-gift>.title::before, .pay-gift>.title::after{
  content: '';
  position: absolute;
  width: 100rpx;
  height: 2rpx;
  background-color: #CCCCCC;
  top: 18rpx;
}
.pay-gift>.title::before{
  left: 150rpx;
}
.pay-gift>.title::after{
  right: 150rpx;
}
.pay-gift .not-receive-tip{
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 30rpx;
  text-align: center;
}
.pay-gift .receive-tip {
  color: #ff7100;
}
.reward-wrapper>.item {
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  background-color: #fafafa;
  font-size: 24rpx;
}
.reward-wrapper>.item .select-btn {
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 30rpx;
  text-align: center;
  color: #FF7100;
  border-radius: 26rpx;
  background-color: #FFF1E5;
  border: 2rpx solid rgba(255,113,0,.4);
  cursor: pointer;
}
.reward-wrapper>.item .btn-disabled {
  color: #FFFFFF;
  background-color: #D2D2D2;
  border-color: #D2D2D2;
}
.reward-wrapper>.item .select-tip {
  color: #999999;
  font-size: 26rpx;
}
.reward-wrapper>.item .left {
  width: 300rpx;
  display: flex;
  align-items: center;
}
.reward-wrapper>.item image {
  flex: 0 0 64rpx;
  height: 64rpx;
  margin-right: 18rpx;
}
.reward-wrapper>.item .title {
  font-size: 26rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.pay-gift .rule-btn{
  margin: 30rpx 0;
  position: relative;
  color: #ff7100;
  text-align: center;
  font-size: 24rpx;
}
.pay-gift .rule-btn .icon-rightarrow{
  position: absolute;
  top: 6rpx;
  margin-left: 10rpx;
  padding: 6rpx;
  font-size: 12rpx;
  font-weight: bold;
  border-radius: 50%;
  color: #ff7100;
  background: rgba(255,127,0,0.1);
}
.dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .4);
  z-index: 999;
}
.dialog .dialog-wrapper {
  position: absolute;
  top: 45%;
  left: 50%;
  text-align: center;
  transform: translate(-50%, -45%);
}
.dialog .main-wrapper {
  width: 553rpx;
  min-height: 300rpx;
  padding: 90rpx 30rpx 50rpx 30rpx;
  border-radius: 10rpx;
  text-align: left;
  box-sizing: border-box;
  background-color: #fff;
}
.dialog .main-wrapper> .title{
  width: calc(100% - 240rpx);
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 40rpx;
  position: absolute;
  top: -10rpx;
  background: url(//develop.zhichiwangluo.com/zhichi_frontend/static/webapp/images/pay-gift/dialog-header.png);
  background-size: 100% 100%;
  color: #000;
  text-align: center;
  font-size: 28rpx;
  left: 50%;
  transform: translate(-50%, 0);
}
.dialog .icon-closes {
  margin-top: 60rpx;
  color: #fff;
  font-size: 32rpx;
  border: 1px solid #fff;
  border-radius: 50%;
  padding: 10rpx;
  opacity: 0.6;
  background: rgba(255, 255, 255, .1);
}
.dialog .activity-time, .dialog .success-tip{
  font-size: 26rpx;
  color: #FF7100;
  margin-bottom: 30rpx;
}
.dialog .success-tip{
  font-weight: bold;
  text-align: center;
}
.dialog .condition-1 {
  font-size: 26rpx;
}
.dialog .condition-1 > .title{
  font-weight: bold;
  margin-bottom: 20rpx;
}
.timeline-item{
  position: relative;
  padding: 0 0 24rpx;
  list-style: none;
  margin: 0;
}
.timeline-item .timeline-item-tail{
  position: absolute;
  left: 25rpx;
  top: 0;
  height: 100%;
  border-left: 4rpx dotted #FED53D;
}
.timeline-item .timeline-item-head{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #FED53D;
  border-radius: 100rpx;
  border-left: 4rpx solid transparent;
  font-size: 30rpx;
  font-weight: 400;
  background-size: 42% 56%;
  background-repeat: no-repeat;
  background-position: 12rpx 10rpx;
}
.timeline-item .timeline-item-content{
  position: relative;
  top: -6rpx;
  padding: 0 0 0 70rpx;
  font-size: 24rpx;
  line-height: 1.5;
}
.timeline-item:last-child .timeline-item-tail{
  display: none;
}