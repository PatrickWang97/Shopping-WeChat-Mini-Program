@charset 'utf-8';
@import "/utils/font_icon.wxss";
.canvas-share-panel-mask {
  position: fixed;
  z-index: 30;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  height: 100%;
  width: 100%;
}
.canvas-share-panel {
  width: 750rpx;
  height: 1126rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
  z-index: 50;
  bottom: 0;
  left: 0;
  border-radius: 28rpx 28rpx 0 0;
  background-color: #fff;
}
.canvas-share-canvas-box {
  width: 650rpx;
  height: 896rpx;
  margin-top: 72rpx;
  box-shadow:0px 5rpx 18rpx 4rpx rgba(0,0,0,0.08);
}
.canvas-share-canvas {
  width: 650rpx;
  height: 896rpx;
}
.canvas-share-btn {
  width:650rpx;
  height:90rpx;
  background-color: #3e97ff;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 31rpx auto 36rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
}
.canvas-icon-box {
  width: 45rpx;
  height: 45rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 20rpx;
  right: 24rpx;
}
.canvas-icon-box .canvas-share-close {
  font-size: 28rpx;
  color: #979797;
  margin-top: -15rpx;
}